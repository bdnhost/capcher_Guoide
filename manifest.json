{
  "manifest_version": 3,
  "name": "AI Screen Recorder Pro",
  "version": "1.0.0",
  "description": "Advanced screen recorder with AI-powered annotations and drawing tools",
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "offscreen",
    "desktopCapture"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Screen Recorder",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "logger.js",
        "overlay.js"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*",
        "settings.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "options_page": "settings.html"
}